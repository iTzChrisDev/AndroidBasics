<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SliderValue"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txt_slider_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/zero_slider"
            android:fontFamily="@font/montserrat_semibold"
            android:textSize="32sp"
            android:textColor="@color/orange"
            android:textAlignment="center"
            android:layout_marginBottom="64sp" />
        <com.google.android.material.slider.Slider
            android:id="@+id/btn_slider_value"
            android:layout_width="256sp"
            android:layout_height="wrap_content"
            app:thumbColor="@color/orange"
            app:trackColor="@color/gray"
            app:thumbHeight="36dp"
            app:thumbWidth="8dp"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>